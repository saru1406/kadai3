<main>
<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    <div class="col-md-3  ">
      <h2>User info</h2>



       <%= image_tag 'no_image.jpg' %>

       <a class="btn btn-outline-secondary btn-block " href="/users/:id/edit">
    <i class="fas fa-user-cog"></i>
     </a>
      <h2>New book</h2>
     <%= form_with model: @book do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_field :body %><br>
      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      <% end %>
    </div>

  <div class="col-md-8 offset-md-1">
<h2>Users</h2>

<table class="table table-hover table-inverse">
  <thead>
    <th>image</th>
    <th>name</th>
    <th></th>
    <th colspan="3"></th>
  </thead>

  <% @users.each do |user| %>
  <tbody>
  <tr>
    <td></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", "/users/#{user.id}" %></td>

  </tr>
  </tbody>
<% end %>
 </table>
    </div>
  </div>
</div>
</main>