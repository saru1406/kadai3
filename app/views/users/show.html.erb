<main>
<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    <div class="col-md-3  ">
      <h2>User info</h2>



       <%= image_tag 'no_image.jpg' %>

       <a><div class="btn btn-outline-secondary btn-block" >
       <%= link_to "/users/:id/edit" do %>
       <i class="fas fa-user-cog"></i>
       <% end %>
       </a>
     </div>
      <h2>New book</h2>
     <%= form_with model: @book do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_field :body %><br>
      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      <% end %>
    </div>

<div class="col-md-8 offset-md-1">
<h2>Users</h2>

<table class="table table-hover table-inverse">
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </thead>

  <% @books.each do |book| %>
  <tbody>
    <td></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>

  </tr>
  </tbody>
<% end %>
 </table>
    </div>
  </div>
</div>
</main>